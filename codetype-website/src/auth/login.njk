---
title: Sign In
description: Sign in to CodeType to track your progress, save stats, and maintain your streak.
layout: base.njk
breadcrumb:
  - label: codetype
    href: /
  - label: login.json
    href: /auth/login/
---

<div class="auth-container">
  <div class="auth-card">
    <div class="auth-header">
      <h1 class="auth-title">Sign In to CodeType</h1>
      <p class="auth-subtitle">Track your progress, save stats,<br>and maintain your streak.</p>
    </div>

    <div id="auth-loading" class="auth-loading">
      <div class="spinner"></div>
      <p>Loading...</p>
    </div>

    <div id="auth-form" class="auth-form" style="display: none;">
      <!-- Google Sign In -->
      <button id="google-signin" class="btn btn-google">
        <svg viewBox="0 0 24 24" width="20" height="20">
          <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
          <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
          <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
          <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
        </svg>
        Continue with Google
      </button>

      <div class="auth-divider">
        <span>or</span>
      </div>

      <!-- Email/Password Form -->
      <form id="email-form" class="email-form">
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" placeholder="you@example.com" required>
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" placeholder="Enter your password" required minlength="6">
        </div>
        <div id="form-error" class="form-error" style="display: none;"></div>
        <button type="submit" class="btn btn-primary btn-full">Sign In</button>
      </form>

      <p class="auth-switch">
        Don't have an account? <a href="#" id="toggle-signup">Sign up</a>
      </p>
    </div>

    <!-- Username Setup (shown after first login) -->
    <div id="username-setup" class="username-setup" style="display: none;">
      <h2>Choose a Username</h2>
      <p>This will be displayed on your profile.</p>
      <form id="username-form">
        <div class="form-group">
          <label for="username">Username</label>
          <input type="text" id="username" name="username" placeholder="your_username" required pattern="[a-zA-Z0-9_-]{2,20}">
          <small>2-20 characters, letters, numbers, underscore, hyphen</small>
        </div>
        <div id="username-error" class="form-error" style="display: none;"></div>
        <button type="submit" class="btn btn-primary btn-full">Continue</button>
      </form>
    </div>

    <!-- Success State -->
    <div id="auth-success" class="auth-success" style="display: none;">
      <div class="success-icon">
        <svg viewBox="0 0 24 24" width="48" height="48" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
          <polyline points="22 4 12 14.01 9 11.01"/>
        </svg>
      </div>
      <h2>You're signed in!</h2>
      <p id="success-message">Redirecting...</p>
    </div>
  </div>
</div>

<script type="module">
  import { initializeApp } from 'https://www.gstatic.com/firebasejs/10.7.0/firebase-app.js';
  import {
    getAuth,
    signInWithPopup,
    GoogleAuthProvider,
    signInWithEmailAndPassword,
    createUserWithEmailAndPassword,
    onAuthStateChanged
  } from 'https://www.gstatic.com/firebasejs/10.7.0/firebase-auth.js';

  const API_BASE = window.API_BASE;
  const firebaseConfig = window.FIREBASE_CONFIG;

  // Check if coming from extension
  const urlParams = new URLSearchParams(window.location.search);
  const source = urlParams.get('source');
  const isFromExtension = source === 'extension';

  // Initialize Firebase (uses default localStorage persistence)
  const app = initializeApp(firebaseConfig);
  const auth = getAuth(app);
  const googleProvider = new GoogleAuthProvider();

  // UI Elements
  const loadingEl = document.getElementById('auth-loading');
  const formEl = document.getElementById('auth-form');
  const usernameSetupEl = document.getElementById('username-setup');
  const successEl = document.getElementById('auth-success');
  const formError = document.getElementById('form-error');
  const usernameError = document.getElementById('username-error');
  const successMessage = document.getElementById('success-message');

  let isSignUp = false;

  // Toggle sign up/sign in
  document.getElementById('toggle-signup').addEventListener('click', (e) => {
    e.preventDefault();
    isSignUp = !isSignUp;
    const btn = document.querySelector('#email-form button[type="submit"]');
    const link = document.getElementById('toggle-signup');
    if (isSignUp) {
      btn.textContent = 'Sign Up';
      link.previousSibling.textContent = 'Already have an account? ';
      link.textContent = 'Sign in';
    } else {
      btn.textContent = 'Sign In';
      link.previousSibling.textContent = "Don't have an account? ";
      link.textContent = 'Sign up';
    }
  });

  // Google Sign In
  document.getElementById('google-signin').addEventListener('click', async () => {
    try {
      formError.style.display = 'none';
      const result = await signInWithPopup(auth, googleProvider);
      await handleAuthSuccess(result.user);
    } catch (error) {
      showError(formError, getErrorMessage(error));
    }
  });

  // Email/Password Sign In/Up
  document.getElementById('email-form').addEventListener('submit', async (e) => {
    e.preventDefault();
    const email = document.getElementById('email').value;
    const password = document.getElementById('password').value;

    try {
      formError.style.display = 'none';
      let result;
      if (isSignUp) {
        result = await createUserWithEmailAndPassword(auth, email, password);
      } else {
        result = await signInWithEmailAndPassword(auth, email, password);
      }
      await handleAuthSuccess(result.user);
    } catch (error) {
      showError(formError, getErrorMessage(error));
    }
  });

  // Username form
  document.getElementById('username-form').addEventListener('submit', async (e) => {
    e.preventDefault();
    const username = document.getElementById('username').value;
    const user = auth.currentUser;

    if (!user) {
      showError(usernameError, 'Not authenticated');
      return;
    }

    try {
      usernameError.style.display = 'none';
      const token = await user.getIdToken();

      const response = await fetch(`${API_BASE}/auth/register`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'Authorization': `Bearer ${token}`
        },
        body: JSON.stringify({ username })
      });

      const data = await response.json();

      if (!response.ok) {
        throw new Error(data.error || 'Failed to register username');
      }

      completeAuth(user, token);
    } catch (error) {
      showError(usernameError, error.message);
    }
  });

  async function handleAuthSuccess(user) {
    loadingEl.style.display = 'flex';
    formEl.style.display = 'none';

    try {
      const token = await user.getIdToken();

      // Verify token with backend
      const response = await fetch(`${API_BASE}/auth/verify`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ idToken: token })
      });

      const data = await response.json();

      if (!data.valid) {
        throw new Error(data.reason || 'Token verification failed');
      }

      if (data.needsUsername) {
        // Show username setup
        loadingEl.style.display = 'none';
        usernameSetupEl.style.display = 'block';
      } else {
        // Complete auth
        completeAuth(user, token);
      }
    } catch (error) {
      loadingEl.style.display = 'none';
      formEl.style.display = 'block';
      showError(formError, error.message);
    }
  }

  function completeAuth(user, token) {
    loadingEl.style.display = 'none';
    usernameSetupEl.style.display = 'none';
    successEl.style.display = 'block';

    if (isFromExtension) {
      // Redirect to VS Code
      successMessage.textContent = 'Redirecting back to VS Code...';
      window.location.href = `vscode://codetype.codetype/auth-callback?token=${encodeURIComponent(token)}`;
    } else {
      // Redirect to dashboard
      successMessage.textContent = 'Redirecting to dashboard...';
      setTimeout(() => {
        window.location.href = '/dashboard/';
      }, 1500);
    }
  }

  function showError(element, message) {
    element.textContent = message;
    element.style.display = 'block';
  }

  function getErrorMessage(error) {
    const errorMessages = {
      'auth/user-not-found': 'No account found with this email',
      'auth/wrong-password': 'Incorrect password',
      'auth/email-already-in-use': 'An account with this email already exists',
      'auth/weak-password': 'Password should be at least 6 characters',
      'auth/invalid-email': 'Please enter a valid email address',
      'auth/popup-closed-by-user': 'Sign in was cancelled',
      'auth/network-request-failed': 'Network error. Please check your connection.'
    };
    return errorMessages[error.code] || error.message;
  }

  // Check auth state on load
  onAuthStateChanged(auth, async (user) => {
    if (user && !isFromExtension) {
      // Already signed in, redirect to dashboard
      window.location.href = '/dashboard/';
    } else {
      loadingEl.style.display = 'none';
      formEl.style.display = 'block';
    }
  });
</script>
