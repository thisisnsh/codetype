{
  "name": "codetype",
  "displayName": "CodeType",
  "description": "Type code for fun while vibe coding. A VS Code game with real snippets, solo/team play, and streaks.",
  "version": "1.0.0",
  "publisher": "thisisnsh",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/thisisnsh/codetype"
  },
  "bugs": {
    "url": "https://github.com/thisisnsh/codetype/issues"
  },
  "homepage": "https://github.com/thisisnsh/codetype#readme",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "typing",
    "productivity",
    "typing-game",
    "speed-typing",
    "developer-tools",
    "vibe-coding"
  ],
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "activationEvents": [
    "onCommand:codetype.typingGame",
    "onUri"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codetype.typingGame",
        "title": "CodeType: Play Game",
        "category": "codetype"
      }
    ],
    "configuration": {
      "title": "CodeType",
      "properties": {
        "codetype.userId": {
          "type": "string",
          "default": "",
          "description": "Your unique user ID (auto-generated)"
        },
        "codetype.theme": {
          "type": "string",
          "default": "stealth",
          "enum": [
            "stealth",
            "minimal",
            "hacker"
          ],
          "description": "Theme for the CodeType panel"
        },
        "codetype.soundEnabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable typing sounds"
        },
        "codetype.useWorkspaceCode": {
          "type": "boolean",
          "default": true,
          "description": "Use code from your workspace for the typing game"
        }
      }
    },
    "keybindings": [
      {
        "command": "codetype.typingGame",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "test": "npm run compile && node ./out/test/runTest.js",
    "test:unit": "npm run compile && mocha --ui tdd ./out/test/unit/**/*.test.js",
    "pretest": "npm run compile"
  },
  "devDependencies": {
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.10.0",
    "@types/sinon": "^21.0.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vscode/test-electron": "^2.5.2",
    "chai": "^6.2.2",
    "eslint": "^8.54.0",
    "glob": "^13.0.0",
    "mocha": "^11.7.5",
    "sinon": "^21.0.1",
    "typescript": "^5.3.0"
  }
}
